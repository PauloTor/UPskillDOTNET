@model PseudoFront_.Models.ParqueDTO

@{
    ViewData["Title"] = "CreateParque";
}

<h1>Novo Parque</h1>

<h4>Parque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateParque">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomeParque" class="control-label"></label>
                <input asp-for="NomeParque" class="form-control" />
                <span asp-validation-for="NomeParque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lotacao" class="control-label"></label>
                <input asp-for="Lotacao" class="form-control" />
                <span asp-validation-for="Lotacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoradaID" class="control-label"></label>
                <input asp-for="MoradaID" class="form-control" />
                <span asp-validation-for="MoradaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}