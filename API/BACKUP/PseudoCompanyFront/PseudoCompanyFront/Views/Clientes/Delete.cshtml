@model PseudoCompanyFront.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}


<h3>Tem a certeza que pretende eliminar este cliente ?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailCliente)
        </dd>
        <dt class="col-sm-2">
            NIF
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NifCliente)
        </dd>
        <dt class="col-sm-2">
            Metodo Pagamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoPagamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClienteID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista de Clientes</a>
    </form>

    <div class="col-md-6">
        <img src="~/photos/Customer2.png" />
    </div>

</div>
