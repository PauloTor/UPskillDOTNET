@model PseudoCompanyFront.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Cliente</h1>

<h3>Tem a certeza que pretende Eliminar este Cliente ?</h3>
<div>
    <h4>Informação de Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailCliente)
        </dd>
        <dt class="col-sm-2">
            NIF
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NifCliente)
        </dd>
        <dt class="col-sm-2">
            Metodo Pagamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoPagamento)
        </dd>
        <dt class="col-sm-2">
            Nome do Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Credito)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClienteID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à Lista de Clientes</a>
    </form>
</div>
