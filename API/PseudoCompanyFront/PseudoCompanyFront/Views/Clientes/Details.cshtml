@model PseudoCompanyFront.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}


<div>
    <h4>Cliente</h4>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCliente)
        </dd>
        <dt class="col-sm-2">
            Email do Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailCliente)
        </dd>
        <dt class="col-sm-2">
            Nif do Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NifCliente)
        </dd>
        <dt class="col-sm-2">
            Metodo Pagamento
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MetodoPagamento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClienteID">Editar</a> |
    <a asp-action="Index">Voltar à lista de Clientes</a>
</div>
