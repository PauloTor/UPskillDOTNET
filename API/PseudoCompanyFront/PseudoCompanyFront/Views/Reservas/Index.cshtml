@model IEnumerable<PseudoCompanyFront.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}

<h1>Reservas</h1>

<p>
    <a asp-action="Create">Nova Reserva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParqueID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LugarID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParqueID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LugarID)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ReservaID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ReservaID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
